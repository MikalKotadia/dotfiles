{
    "$schema": "https://opencode.ai/config.json",
    "theme": "catppuccin",
    "model": "anthropic/claude-sonnet-4-5-20250929",
    "layout": "stretch",
    "autoupdate": true,
    "plugin": [
        "opencode-gemini-auth"
    ],
    "provider": {
        "google": {
            "models": {
                "gemini-3-pro-preview": {
                    "options": {
                        "thinkingConfig": {
                            "includeThoughts": false
                        }
                    }
                },
                "gemini-2.5-flash": {
                    "options": {
                        "thinkingConfig": {
                            "includeThoughts": false
                        }
                    }
                }
            }
        }
    },
    "permission": {
        "edit": "ask",
        "bash": "ask"
    },
    "agent": {
        "general": {
            "mode": "subagent",
            // "model": "google/gemini-2.5-flash",
        },
        "review": {
            "description": "Reviews code for best practices and potential issues",
            "mode": "subagent",
            "temperature": 0,
            "prompt": "{file:./prompts/reviewer.md}",
            "tools": {
                "write": false,
                "edit": false
            }
        },
        "document": {
            "description": "Documentation generator",
            "mode": "subagent",
            "temperature": 0,
            "prompt": "{file:./prompts/documentation.md}",
            "tools": {
                "edit": true
            }
        },
        "debug": {
            "description": "Expert debugger for investigating and identifying root causes of bugs",
            "mode": "subagent",
            "temperature": 0,
            "prompt": "{file:./prompts/debugger.md}",
            "tools": {
                "write": false,
                "edit": false
            }
        }
    },
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "enabled": true
        }
    },
    "keybinds": {
        "session_child_cycle": "<leader>right",
        "session_child_cycle_reverse": "<leader>left",
    }
}
